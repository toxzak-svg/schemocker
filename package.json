{
  "name": "schemocker",
  "version": "2.0.0",
  "description": "Turn JSON schemas into live mock REST APIs in seconds for frontend/dev/test teams",
  "main": "dist/index.js",
  "bin": {
    "schemocker": "dist/cli/index.js",
    "schemocker-mcp": "dist/mcp-server/index.js"
  },
  "scripts": {
    "build": "node scripts/create-ui-template.js && tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "mcp": "node dist/mcp-server/index.js",
    "mcp:dev": "ts-node src/mcp-server/index.ts",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "build:exe": "npm run build && pkg . --out-path dist/executable",
    "build:release": "node scripts/build.js",
    "build:installer": "node scripts/build-installer.js",
    "build:portable": "node scripts/build-portable.js",
    "build:distribution": "node scripts/build-distribution.js",
    "build:installer-ui": "cd installer-ui && npm install && npm run build:win",
    "build:all": "node scripts/build-complete.js",
    "clean": "node -e \"const fs=require('fs');['dist','releases','coverage'].forEach(d=>{if(fs.existsSync(d))fs.rmSync(d,{recursive:true,force:true,maxRetries:5,retryDelay:200})})\"",
    "clean:force": "powershell -ExecutionPolicy Bypass -File clean-build.ps1 -Force",
    "verify:checksums": "node scripts/verify-checksums.js",
    "prepare": "husky",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\""
  },
  "keywords": [
    "mock",
    "api",
    "schema",
    "generator",
    "rest",
    "json",
    "cli",
    "server",
    "mcp",
    "model-context-protocol",
    "ai",
    "llm",
    "openai"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "@types/cors": "^2.8.17",
    "axios": "^1.13.2",
    "body-parser": "^1.20.2",
    "chalk": "^4.1.2",
    "chokidar": "^5.0.0",
    "commander": "^14.0.2",
    "cors": "^2.8.5",
    "express": "^5.2.1",
    "inquirer": "^9.2.12",
    "json-schema-to-typescript": "^13.0.0",
    "qs": "^6.14.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/chokidar": "^1.7.5",
    "@types/express": "^5.0.6",
    "@types/inquirer": "^9.0.7",
    "@types/jest": "^29.5.10",
    "@types/node": "^20.19.27",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "@yao-pkg/pkg": "^6.11.0",
    "archiver": "^7.0.1",
    "axios": "^1.13.2",
    "husky": "^9.0.0",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "nexe": "^5.0.0-beta.4",
    "pkg": "^5.8.1",
    "prettier": "^3.1.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.3"
  },
  "pkg": {
    "scripts": "dist/**/*.js",
    "assets": [
      "package.json",
      "docs/**/*",
      "node_modules/chokidar/**/*",
      "node_modules/inquirer/**/*"
    ],
    "targets": [
      "node18-win-x64",
      "node18-macos-x64",
      "node18-macos-arm64",
      "node18-linux-x64"
    ],
    "outputPath": "dist/executable",
    "options": [
      "experimental-modules"
    ]
  },
  "files": [
    "dist/cli",
    "dist/errors",
    "dist/generators",
    "dist/index.js",
    "dist/index.d.ts",
    "dist/installer",
    "dist/integrations",
    "dist/mcp-server",
    "dist/parsers",
    "dist/types",
    "dist/utils",
    "package.json",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/toxzak-svg/schemock-app.git"
  },
  "bugs": {
    "url": "https://github.com/toxzak-svg/schemock-app/issues"
  },
  "homepage": "https://github.com/toxzak-svg/schemock-app#readme"
}
