{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Product Schema",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid"
    },
    "name": {
      "type": "string",
      "minLength": 1
    },
    "price": {
      "type": "number",
      "minimum": 0
    },
    "category": {
      "type": "string",
      "enum": [
        "electronics",
        "clothing",
        "books"
      ]
    }
  },
  "required": [
    "id",
    "name",
    "price",
    "category"
  ]
}